<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="sail4oxygen.Views.ManualPage"
             Title="ManualPage">

    <Shell.TitleView>
        <HorizontalStackLayout
            HorizontalOptions="End">
            <Label
                Text="What is"
                VerticalOptions="Center"
                FontFamily="LucidaGrande" />

            <Image Source="s4ob.png"
                   x:Name="s4oLogo"
                   VerticalOptions="Center"
                   Aspect="AspectFit"
                   HeightRequest="80"
                   Margin="12,5,12,5"/>
        </HorizontalStackLayout>
    </Shell.TitleView>

    <VerticalStackLayout>
        <WebView Source="Resources/Raw/manualde.pdf"/>
    </VerticalStackLayout>
</ContentPage>
